<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bolnizar.itfest.activities.HomeActivity">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/home_ken"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/stock"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".9"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/home_add_classes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:background="@drawable/button_selector"
            android:text="@string/addclas"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <Button
            android:id="@+id/home_search_classes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:background="@drawable/button_selector"
            android:text="@string/search_classess"
            android:textColor="@color/white"/>
    </LinearLayout>

</FrameLayout>
